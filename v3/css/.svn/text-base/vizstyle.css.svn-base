#container {
	margin-top:20px;
}

#vizContainer{
	margin-top: 20px;
	padding-top: 20px;
	background-color: #ffffff;
	box-shadow: 0px 0px 10px #ccc;
}

figure {
	float: left;
	width: 80px;
}

figure img {
	margin-left: 10px;
	margin-right: 10px;
}

figcaption {
	color: #FFF;
	text-align: center;
	padding-top: 5px;
}

nav {
	position: absolute;
	bottom: 57px;
}

#legend {
	position: absolute;
	bottom: 0px;
}

#legend ol {
	list-style-type: none;
	display: inline;
}

#legend ol li {
	display: inline;
	float: left;
	padding-right: 15px;
	font-size: 1.2em;
}

#legend ol li img {
	padding-right: 5px;
}


#content{
	min-height: 460px;
	height: 460px;
	position: relative;
}


#right p{
	float:right;
}

#sliderContainer {
	float: left;
	background: #666666;
	padding: 20px 10px 10px 10px;
	margin: 20px 0 20px 0;
	width: 940px;
	overflow: hidden;
   -moz-box-shadow: inset 0 0 10px #000000;
   -webkit-box-shadow: inset 0 0 10px #000000;
   box-shadow: inset 0 0 10px #000000;
}

#slider {
	width: 2240px;
}


.selected img {
	opacity: 1;
}

.selected figcaption {
	color: #FFF;
}

.unselected img {
	opacity: .5;
}

.unselected figcaption {
	color: #999;
}

/*svg styling*/
line, path {
	fill: none;
	stroke: #ccc;

}

line {
	shape-rendering: crispEdges;
}
